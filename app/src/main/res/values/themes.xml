<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.VoyageOfLife" parent="Theme.Material3.DayNight.NoActionBar">

        <!--  Primary Color  -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <item name="colorOnPrimary">@color/white</item>

        <!--  My Theme  -->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="fontFamily">@font/nunito_regular</item>

        <!--  Transition  -->
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/slide_bottom</item>
        <item name="android:windowExitTransition">@android:transition/no_transition</item>

    </style>

    <style name="Theme.VoyageOfLife" parent="Base.Theme.VoyageOfLife" />
</resources>