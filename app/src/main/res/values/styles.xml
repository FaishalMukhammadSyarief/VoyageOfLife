<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextTitle">
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextSubtitle">
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextDescription">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center|top</item>
        <item name="android:justificationMode">inter_word</item>
    </style>

    <style name="TextTitle.ToolbarTitle">
        <item name="android:textSize">36sp</item>
        <item name="fontFamily">@font/tangerine_bold</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextTitle.FabTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ThemeOverlay.Material3.Button.TextButton.CustomButton">
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:backgroundTint">@color/transparent</item>
    </style>

    <style name="CustomButton">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="CustomEditText">
        <item name="endIconMode">clear_text</item>
        <item name="errorEnabled">true</item>
        <item name="boxCornerRadiusTopStart">15dp</item>
        <item name="boxCornerRadiusBottomStart">15dp</item>
        <item name="boxCornerRadiusTopEnd">15dp</item>
        <item name="boxCornerRadiusBottomEnd">15dp</item>
    </style>

    <style name="LoadingScreen">
        <item name="android:translationZ">1dp</item>
        <item name="android:visibility">gone</item>
        <item name="lottie_autoPlay">true</item>
        <item name="lottie_loop">true</item>
        <item name="lottie_speed">2</item>
        <item name="lottie_rawRes">@raw/boat</item>
    </style>

    <style name="RoundCorner">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="SlightlyRoundCorner">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20%</item>
    </style>

    <style name="SmallRoundCorner">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">6%</item>
    </style>

    <style name="RoundBottomCorner">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">8%</item>
        <item name="cornerSizeBottomRight">8%</item>
    </style>

    <style name="CustomFab">
        <item name="android:backgroundTint">@color/white</item>
        <item name="fabCustomSize">42dp</item>
        <item name="maxImageSize">18dp</item>
        <item name="shapeAppearance">@style/RoundCorner</item>
        <item name="tint">@color/blue</item>
    </style>

</resources>