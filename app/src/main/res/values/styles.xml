<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextTitle">
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextSubtitle">
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextDescription">
        <item name="android:textSize">16sp</item>
        <item name="android:justificationMode">inter_word</item>
    </style>

    <style name="TextTitle.ToolbarTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/varela_round_regular</item>
    </style>

    <style name="ThemeOverlay.Material3.Button.TextButton.CustomButton">
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:backgroundTint">@color/transparent</item>
    </style>

    <style name="CustomButton">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="CustomEditText">
        <item name="endIconMode">clear_text</item>
        <item name="errorEnabled">true</item>
        <item name="boxCornerRadiusTopStart">15dp</item>
        <item name="boxCornerRadiusBottomStart">15dp</item>
        <item name="boxCornerRadiusTopEnd">15dp</item>
        <item name="boxCornerRadiusBottomEnd">15dp</item>
    </style>

    <style name="LoadingScreen">
        <item name="android:translationZ">1dp</item>
        <item name="android:visibility">gone</item>
        <item name="lottie_autoPlay">true</item>
        <item name="lottie_loop">true</item>
        <item name="lottie_speed">2</item>
        <item name="lottie_rawRes">@raw/boat</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginVertical">16dp</item>
        <item name="android:background">@drawable/bg_round</item>
    </style>

    <style name="RoundCorner">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">12%</item>
        <item name="cornerSizeBottomRight">12%</item>
    </style>

</resources>