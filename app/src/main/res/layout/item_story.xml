<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="data"
            type="com.zhalz.voyageoflife.data.remote.response.StoryData" />

    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:cardUseCompatPadding="true"
        app:strokeWidth="0dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            imageUrl="@{data.photoUrl}"
            android:contentDescription="@string/cd_image_story"
            android:scaleType="centerCrop"
            android:src="@drawable/deer" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:paddingHorizontal="8dp"
            android:layout_margin="8dp"
            android:background="@drawable/bg_glass"
            android:paddingVertical="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                style="@style/TextTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text="@{data.name}"
                android:textColor="@color/semi_transparent_black"
                android:textSize="12sp"
                tools:text="Faishal" />

            <TextView
                android:id="@+id/tv_birth"
                style="@style/TextTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:singleLine="false"
                android:text="@{data.description}"
                android:textColor="@color/semi_transparent_black"
                android:textSize="16sp"
                tools:text="Once upon a time" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>
